{
  "name": "@pearson-components/coach-mark",
  "version": "0.1.0",
  "description": "Simple popover to explain new features to users.",
  "scripts": {
    "test": "./node_modules/karma/bin/karma start karma.conf.js",
    "dev-setup": "mkdir -p fonts && cp ./node_modules/pearson-elements/dist/fonts/* ./fonts && cp ./node_modules/pearson-elements/dist/css/elements.css ./demo",
    "dev": "npm run dev-setup && webpack-dev-server --port 8081 --devtool eval --hot --progress --colors",
    "build": "webpack -p",
    "version": "npm run gen-changelog && git add CHANGELOG.md",
    "ci": "npm test && npm run build",
    "gen-changelog": "node ./npm_scripts/gen-changelog.js",
    "release": "node ./npm_scripts/release.js",
    "postpublish": "npm access public && echo 'Package scope set to public!'"
  },
  "main": "./main.js",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^5.8.38",
    "babel-loader": "^5.4.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-runtime": "^5.8.25",
    "conventional-changelog": "^1.1.0",
    "css-loader": "^0.23.1",
    "expect.js": "^0.3.1",
    "imports-loader": "^0.6.4",
    "karma": "^0.13.0",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.1.0",
    "node-sass": "^3.7.0",
    "pearson-elements": "^0.5.0",
    "phantomjs-polyfill": "0.0.2",
    "sass-loader": "^3.2.0",
    "semver": "^5.1.0",
    "sinon": "^1.17.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "@pearson-components/component-handler": "^0.1.4"
  },
  "keywords": [
    "pearson-components",
    "coach-mark"
  ]
}
